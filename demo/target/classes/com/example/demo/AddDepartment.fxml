<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.AddDepartmentController" prefHeight="400" prefWidth="600" style="-fx-background-color: #f1f1f1;">
    <children>
        <!-- Title -->
        <Label layoutX="200" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1976D2;" text="Add Department" />

        <!-- Department Name Field -->
        <Label layoutX="50" layoutY="80" text="Department Name:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <TextField fx:id="departmentNameField" layoutX="200" layoutY="80" prefWidth="300" promptText="Enter Department Name"
                   style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-color: #cccccc; -fx-border-radius: 5px;" />

        <!-- Action Buttons (Save and Back) -->
        <HBox spacing="20" alignment="CENTER" layoutX="200" layoutY="150">
            <Button fx:id="saveButton" text="Save" onAction="#handleSave"
                    style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5px;" />
            <Button fx:id="backButton" text="Back" onAction="#goBack"
                    style="-fx-background-color: #cccccc; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5px;" />
        </HBox>
    </children>
</AnchorPane>
