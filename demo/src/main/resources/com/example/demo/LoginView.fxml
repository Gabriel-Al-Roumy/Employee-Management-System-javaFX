<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb);">
    <children>
        <!-- Login Title -->
        <Label text="Employee Management System"
               layoutX="100" layoutY="30"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1976D2;"/>

        <!-- Username Label -->
        <Label text="Username:"
               layoutX="50" layoutY="100"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>

        <!-- Username Input Field -->
        <TextField fx:id="usernameField"
                   layoutX="150" layoutY="95"
                   style="-fx-font-size: 16px; -fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #90CAF9; -fx-border-width: 2px; -fx-pref-width: 300px; -fx-border-radius: 5px;"/>

        <!-- Password Label -->
        <Label text="Password:"
               layoutX="50" layoutY="160"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>

        <!-- Password Input Field -->
        <PasswordField fx:id="passwordField"
                       layoutX="150" layoutY="155"
                       style="-fx-font-size: 16px; -fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #90CAF9; -fx-border-width: 2px; -fx-pref-width: 300px; -fx-border-radius: 5px;"/>

        <!-- Login Button -->
        <Button text="Login"
                layoutX="150" layoutY="220"
                onAction="#handleLogin"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

        <!-- Exit Button -->
        <Button text="Exit"
                layoutX="300" layoutY="220"
                onAction="#handleExit"
                style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

        <!-- Error Message -->
        <Label fx:id="errorLabel"
               layoutX="150" layoutY="280"
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #D32F2F;"
               text="" />
    </children>
</AnchorPane>
