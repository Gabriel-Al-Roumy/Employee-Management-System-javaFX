<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="600" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ViewProfileController"
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb);">
    <children>
        <!-- Title -->
        <Label layoutX="200" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1976D2;" text="View Employee Profile" />

        <!-- Name -->
        <Label layoutX="50" layoutY="80" text="Name:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="nameLabel" layoutX="200" layoutY="80" style="-fx-font-size: 14px; -fx-text-fill: #1976D2;" />

        <!-- Gender -->
        <Label layoutX="50" layoutY="120" text="Gender:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="genderLabel" layoutX="200" layoutY="120" style="-fx-font-size: 14px; -fx-text-fill: #1976D2;" />

        <!-- Position -->
        <Label layoutX="50" layoutY="160" text="Position:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="positionLabel" layoutX="200" layoutY="160" style="-fx-font-size: 14px; -fx-text-fill: #1976D2;" />

        <!-- Department -->
        <Label layoutX="50" layoutY="200" text="Department:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="departmentLabel" layoutX="200" layoutY="200" style="-fx-font-size: 14px; -fx-text-fill: #1976D2;" />

        <!-- Salary -->
        <Label layoutX="50" layoutY="240" text="Salary:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="salaryLabel" layoutX="200" layoutY="240" style="-fx-font-size: 14px; -fx-text-fill: #1976D2;" />

        <!-- Contact Info -->
        <Label layoutX="50" layoutY="280" text="Contact Info:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="contactInfoLabel" layoutX="200" layoutY="280" style="-fx-font-size: 14px; -fx-text-fill: #1976D2;" />

        <!-- Date of Joining -->
        <Label layoutX="50" layoutY="320" text="Date of Joining:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="dojLabel" layoutX="200" layoutY="320" style="-fx-font-size: 14px; -fx-text-fill: #1976D2;" />

        <!-- Contract Expiry -->
        <Label layoutX="50" layoutY="360" text="Contract Expiry:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="contractExpiryLabel" layoutX="200" layoutY="360" style="-fx-font-size: 14px; -fx-text-fill: #1976D2;" />

        <!-- Employment Status -->
        <Label layoutX="50" layoutY="400" text="Employment Status:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="statusLabel" layoutX="200" layoutY="400" style="-fx-font-size: 14px; -fx-text-fill: #1976D2;" />

        <!-- Back Button -->
        <Button layoutX="250" layoutY="480" onAction="#goBack" text="Back"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5px;" />
    </children>
</AnchorPane>
